# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/jokes_db

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Connection Details (used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jokes_db
DB_USER=postgres
DB_PASSWORD=password

# Docker PostgreSQL Configuration (matches docker-compose.yml)
POSTGRES_DB=jokes_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# pgAdmin Configuration (optional)
PGADMIN_DEFAULT_EMAIL=admin@jokes.local
PGADMIN_DEFAULT_PASSWORD=admin
